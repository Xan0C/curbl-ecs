{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "strictFunctionTypes": false,                         /* When assigning functions, check to ensure parameters and the return values are subtype-compatible. */
    "strictBindCallApply": false,
    "module": "CommonJS",
    "moduleResolution": "Node"
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
  ]
}